<Window x:Class="REMFactory.MainWindow"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REMFactory"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:constantChanges="clr-namespace:REMFactory"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" d:DataContext="{d:DesignInstance constantChanges:MainWindow}">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl TabStripPlacement="Left" Background="#FF3C3C42">
            <TabItem x:Name="tabMain">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="107" Width="108" Source="\Resources\mainicon.png" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>

                    <Button Grid.Row="0" Click="InjectStopOnClick" Margin="337,289,418,260">
                        Inject/Stop Data
                    </Button>
                    <!--Here we disable tooltips and hovering to get a better performance-->

                    <lvc:CartesianChart x:Name="cartesianChart1" AnimationsSpeed="0:0:0.5" Hoverable="False" DataTooltip="{x:Null}" Margin="313,22,7,288">
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Values="{Binding ChartValues1}" 
                                            PointGeometry="{x:Null}" 
                                            LineSmoothness="1"
                                            StrokeThickness="1" 
                                            Stroke="#F34336"
                                            Fill="Transparent"/>
                            <lvc:LineSeries Values="{Binding ChartValues2}" 
                                            PointGeometry="{x:Null}" 
                                            LineSmoothness="1"
                                            StrokeThickness="2" 
                                            Stroke="#36F34F"
                                            Fill="Transparent"/>
                            <lvc:LineSeries Values="{Binding ChartValues3}" 
                                            PointGeometry="{x:Null}" 
                                            LineSmoothness="1"
                                            StrokeThickness="2" 
                                            Stroke="#FFF336DA"
                                            Fill="Transparent"/>
                            <lvc:LineSeries Values="{Binding ChartValues4}" 
                                            PointGeometry="{x:Null}" 
                                            LineSmoothness="1"
                                            StrokeThickness="2" 
                                            Stroke="#FF366AF3"
                                            Fill="Transparent"/>
                        </lvc:CartesianChart.Series>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis LabelFormatter="{Binding DateTimeFormatter}"
                                        MaxValue="{Binding AxisMax}" 
                                        MinValue="{Binding AxisMin}"
                                        Unit="{Binding AxisUnit}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="{Binding AxisStep}" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <!--<lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="전력 사용량"
                                        MinValue="0" 
                                        MaxValue="10000000" 
      
                            />
                            <lvc:Axis Title="전력생산량"
                                            MinValue="0" 
                                            MaxValue="100000" 
     
                                        Position="RightTop"
                            />
                        </lvc:CartesianChart.AxisY>-->
                    </lvc:CartesianChart>
                    <!--라인별 사용량, 효율-->
                    <Viewbox Margin="10,226,591,9">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="387*"/>
                                <RowDefinition Height="311*"/>
                            </Grid.RowDefinitions>
                            <Border Height="500" Width="600" Background="#FF3C3C42" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="20" BorderBrush="#FFFFFF" BorderThickness="5" Margin="10,156,0,0" Grid.Row="1" Grid.ColumnSpan="2"/>
                            <TextBlock x:Name="lineAtext" FontSize="40" FontFamily="{StaticResource Roboto_Medium}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="132,550,0,0" Grid.Row="1" Grid.Column="1" MouseUp="lineAtext_MouseUp">
                            <Run x:Name="lineA" Text="라인 A" Foreground="#FFFFFF"/>
                            </TextBlock>
                            <Grid Height="70" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="209,241,0,0" Grid.Row="1" Grid.Column="1"/>
                            <Image Height="297" Width="317" VerticalAlignment="Top" HorizontalAlignment="Left" Source="{StaticResource Dial_Image}" Stretch="Uniform" Margin="42,241,0,0" Grid.RowSpan="2" Grid.Column="1"/>
                            <Grid Height="290" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="99,240,0,0" Grid.RowSpan="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="52*"/>
                                    <ColumnDefinition Width="93*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Stroke="#FF3C3C42" StrokeThickness="20" Margin="-10,45,93,37" Grid.ColumnSpan="2"/>
                                <Path x:Name="pathLine1" Stroke="#FF4F7EE8" StrokeThickness="28" Fill="Transparent" Margin="-8,50,8,-50" Grid.ColumnSpan="2">
                                    <Path.Effect>
                                        <DropShadowEffect BlurRadius="50" ShadowDepth="4" Direction="-90" Color="#FF4F7EE8"/>
                                    </Path.Effect>
                                </Path>
                                <TextBlock x:Name="labelEfficiencyLine1" Foreground="#FF4F7EE8" Width="98" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" Margin="43,131,0,59" Grid.ColumnSpan="2">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock x:Name="labelLine1" Foreground="#FF4F7EE8" Height="100" Width="128" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,-72,0,0" Grid.ColumnSpan="2">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="KW" Foreground="#FFFFFF" Height="20" Width="210" FontFamily="{StaticResource Rubik_Light}" FontSize="15" HorizontalAlignment="Left" TextAlignment="Center" Margin="-13,95,0,175" Grid.ColumnSpan="2"/>
                            </Grid>
                            <Slider x:Name="sliderLine1" Minimum="0" Maximum="10000" ValueChanged="slider_valueChanged1" Width="200" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="94,0,0,16" Grid.Row="1" Grid.Column="1"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox Margin="300,226,300,9">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="387*"/>
                                <RowDefinition Height="311*"/>
                            </Grid.RowDefinitions>
                            <Border Height="500" Width="600" Background="#FF3C3C42" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="20" BorderBrush="#FFFFFF" BorderThickness="5" Margin="10,156,0,0" Grid.Row="1" Grid.ColumnSpan="2"/>
                            <TextBlock x:Name="lineBtext" FontSize="40" FontFamily="{StaticResource Roboto_Medium}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="132,550,0,0" Grid.Row="1" Grid.Column="1">
                            <Run Text="라인 B" Foreground="#FFFFFF"/>
                            </TextBlock>
                            <Grid Height="70" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="209,241,0,0" Grid.Row="1" Grid.Column="1"/>
                            <Image Height="297" Width="317" VerticalAlignment="Top" HorizontalAlignment="Left" Source="{StaticResource Dial_Image}" Stretch="Uniform" Margin="42,241,0,0" Grid.RowSpan="2" Grid.Column="1"/>
                            <Grid Height="290" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="99,240,0,0" Grid.RowSpan="2" Grid.Column="1">
                                <Ellipse Stroke="#FF3C3C42" StrokeThickness="20" Margin="-10,45,93,37"/>
                                <Path x:Name="pathLine2" Stroke="#FF4F7EE8" StrokeThickness="28" Fill="Transparent" Margin="-8,50,8,-50">
                                    <Path.Effect>
                                        <DropShadowEffect BlurRadius="50" ShadowDepth="4" Direction="-90" Color="#FF4F7EE8"/>
                                    </Path.Effect>
                                </Path>
                                <TextBlock x:Name="labelEfficiencyLine2" Foreground="#FF4F7EE8" Height="100" Width="98" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,120,0,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock x:Name="labelLine2" Foreground="#FF4F7EE8" Height="100" Width="128" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,-72,0,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="KW" Foreground="#FFFFFF" Height="20" Width="210" FontFamily="{StaticResource Rubik_Light}" FontSize="15" HorizontalAlignment="Left" TextAlignment="Center" Margin="-13,95,0,175"/>
                            </Grid>
                            <Slider x:Name="sliderLine2" Minimum="0" Maximum="15000" ValueChanged="slider_valueChanged2" Width="200" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="94,0,0,16" Grid.Row="1" Grid.Column="1"/>
                        </Grid>
                    </Viewbox>
                    <Viewbox Margin="587,226,14,9">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="387*"/>
                                <RowDefinition Height="311*"/>
                            </Grid.RowDefinitions>
                            <Border Height="500" Width="600" Background="#FF3C3C42" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="20" BorderBrush="#FFFFFF" BorderThickness="5" Margin="10,156,0,0" Grid.Row="1" Grid.ColumnSpan="2"/>
                            <TextBlock x:Name="lineCtext" FontSize="40" FontFamily="{StaticResource Roboto_Medium}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="132,550,0,0" Grid.Row="1" Grid.Column="1">
                            <Run Text="라인 C" Foreground="#FFFFFF"/>
                            </TextBlock>
                            <Grid Height="70" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="209,241,0,0" Grid.Row="1" Grid.Column="1"/>
                            <Image Height="297" Width="317" VerticalAlignment="Top" HorizontalAlignment="Left" Source="{StaticResource Dial_Image}" Stretch="Uniform" Margin="42,241,0,0" Grid.RowSpan="2" Grid.Column="1"/>
                            <Grid Height="290" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="99,240,0,0" Grid.RowSpan="2" Grid.Column="1">
                                <Ellipse Stroke="#FF3C3C42" StrokeThickness="20" Margin="-10,45,93,37"/>
                                <Path x:Name="pathLine3" Stroke="#FF4F7EE8" StrokeThickness="28" Fill="Transparent" Margin="-8,50,8,-50">
                                    <Path.Effect>
                                        <DropShadowEffect BlurRadius="50" ShadowDepth="4" Direction="-90" Color="#FF4F7EE8"/>
                                    </Path.Effect>
                                </Path>
                                <TextBlock x:Name="labelEfficiencyLine3" Foreground="#FF4F7EE8" Height="100" Width="98" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,131,0,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock x:Name="labelLine3" Foreground="#FF4F7EE8" Height="100" Width="128" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,-72,0,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="KW" Foreground="#FFFFFF" Height="20" Width="210" FontFamily="{StaticResource Rubik_Light}" FontSize="15" HorizontalAlignment="Left" TextAlignment="Center" Margin="-13,95,0,175"/>
                            </Grid>
                            <Slider x:Name="sliderLine3" Minimum="0" Maximum="20000" ValueChanged="slider_valueChanged3" Width="200" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="94,0,0,16" Grid.Row="1" Grid.Column="1"/>
                        </Grid>
                    </Viewbox>
                    <!--라인별 사용량, 효율-->
                    <!--총 생산 전력-->
                    <Viewbox Margin="10,-29,591,263">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="387*"/>
                                <RowDefinition Height="311*"/>
                            </Grid.RowDefinitions>
                            <Border Height="500" Width="600" Background="#FF3C3C42" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="20" BorderBrush="#FFFFFF" BorderThickness="5" Margin="10,156,0,0" Grid.Row="1" Grid.ColumnSpan="2"/>
                            <TextBlock FontSize="40" FontFamily="{StaticResource Roboto_Medium}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="132,550,0,0" Grid.Row="1" Grid.Column="1">
                            <Run Text="총 전력 생산량" Foreground="#FFFFFF"/>
                            </TextBlock>
                            <Grid Height="70" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="209,241,0,0" Grid.Row="1" Grid.Column="1"/>
                            <Image Height="297" Width="317" VerticalAlignment="Top" HorizontalAlignment="Left" Source="{StaticResource Dial_Image}" Stretch="Uniform" Margin="42,241,0,0" Grid.RowSpan="2" Grid.Column="1"/>
                            <Grid Height="290" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="99,240,0,0" Grid.RowSpan="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="199*"/>
                                    <ColumnDefinition Width="91*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Stroke="#FF3C3C42" StrokeThickness="20" Margin="-10,45,2,37"/>
                                <Path x:Name="pathTotal" Stroke="#FF4F7EE8" StrokeThickness="28" Fill="Transparent" Margin="-8,50,8,-50" Grid.ColumnSpan="2">
                                    <Path.Effect>
                                        <DropShadowEffect BlurRadius="50" ShadowDepth="4" Direction="-90" Color="#FF4F7EE8"/>
                                    </Path.Effect>
                                </Path>
                                <TextBlock x:Name="labelTotal" Foreground="#FF4F7EE8" Height="100" Width="200" FontFamily="{StaticResource Roboto_Light}" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,-55,0,0" Grid.ColumnSpan="2">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="30" ShadowDepth="2" Direction="-90" Color="#FF4F7EE8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="KW" Foreground="#FFFFFF" Height="20" Width="210" FontFamily="{StaticResource Rubik_Light}" FontSize="15" HorizontalAlignment="Left" TextAlignment="Center" Margin="-13,95,0,175"/>
                            </Grid>
                            <Slider x:Name="sliderTotal" Minimum="0" Maximum="10000" ValueChanged="slider_valueChanged" Width="200" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="94,0,0,16" Grid.Row="1" Grid.Column="1"/>
                            <TextBlock x:Name="labelElec" HorizontalAlignment="Left" Margin="54,58,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="529" Height="93" FontSize="50"/>

                        </Grid>
                    </Viewbox>
                    <!--총 생산 전력-->
                </Grid>
            </TabItem>
            <TabItem x:Name="tabOption">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="107" Width="108" Source="\Resources\optionicon.png" />
                        
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Label x:Name="electricityAllSellLabel" Content="Label" Margin="489,69,84,412" FontSize="48" RenderTransformOrigin="0.436,0.58">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                        </Label.Foreground>
                    </Label>
                    <Label x:Name="electricityAllSellNameLabel" Content="전력 누적 판매량" Margin="489,0,84,497" FontSize="36" Foreground="White"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabManager">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="107" Width="108" Source="\Resources\optionicon.png" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid x:Name="loginGrid" >
                        <Label Content="관리자 모드" Width="422" Margin="225,23,225,440" FontSize="72"></Label>
                        <Label x:Name="idLabel" Content="ID" Margin="105,168,647,289" FontSize="72"/>
                        <TextBox x:Name="idTextBox" TextWrapping="Wrap" Margin="225,168,236,289" FontSize="72"/>
                        <Label x:Name="pwLabel" Content="PW" Margin="85,337,647,120" FontSize="72"/>
                        <PasswordBox x:Name="pwTextBox" Margin="225,337,236,120" FontSize="72"/>
                        <Button x:Name="managerLoginButton" Content="로그인" HorizontalAlignment="Left" Margin="225,477,0,0" VerticalAlignment="Top" Height="70" Width="411" RenderTransformOrigin="0.324,0.302" FontSize="36" Click="managerLoginButton_Click"/>
                    </Grid>
                    <Grid x:Name="managerPage" Visibility="Collapsed">
                        <Label Content="이곳은 관리자 페이지입니다." FontSize="36" Margin="172,0,172,502" RenderTransformOrigin="0.495,0.374"/>
                        <Label Content="라인별 max 전기 사용량 설정 기능" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Height="37" Width="265" FontSize="16"/>
                        <Slider x:Name="Line1Max" Minimum="5000" Maximum="15000" Value="10000" HorizontalAlignment="Left" Margin="79,142,0,0" VerticalAlignment="Top" Width="134"/>
                        <Label Content="Line1" HorizontalAlignment="Left" Margin="35,138,0,0" VerticalAlignment="Top"/>
                        <Slider x:Name="Line2Max" Minimum="5000" Maximum="15000" Value="10000" HorizontalAlignment="Left" Margin="330,142,0,0" VerticalAlignment="Top" Width="134"/>
                        <Label Content="Line2" HorizontalAlignment="Left" Margin="286,138,0,0" VerticalAlignment="Top"/>
                        <Slider x:Name="Line3Max" Minimum="5000" Maximum="15000" Value="10000" HorizontalAlignment="Left" Margin="605,142,0,0" VerticalAlignment="Top" Width="134"/>
                        <Label Content="Line3" HorizontalAlignment="Left" Margin="561,138,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </TabItem>
           

        </TabControl>
    </Grid>
</Window>